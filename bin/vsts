#!/bin/bash
source $(dirname ${BASH_SOURCE})/../../shf3/lib/header
import gui

vsts_vstrans="vstrans"
vsts_vsposcar="vsposcar"

function help/vsts() {
  cat << EOF
Usage: ${gbn} options
              -i input
              -t "trans1.tf trans2.tf ..."
EOF
exit 1
}

### args
while getopts hvi:t: o; do
  case "$o" in
    i) inp=$OPTARG;;
    t) trans="${OPTARG}";;
    v) gdbg=true;
       vsts_vstrans="${vsts_vstrans} -w";
       vsts_vsposcar="${vsts_vsposcar} -w";
       ;;
    h|*) help/vsts;;
  esac
done

function vsts/trans() {
  local _trs="${1}"
  local _inp="${2}"
  local _out="${3}"
  # crop
  ${vsts_vstrans}  -i ${_inp} -o ${_out} -t ${_trs}
  # xyz
  ${vsts_vsposcar} -i ${_out} -o ${_out%%.POSCAR} -x
}

### main
gui/header

if ! test -r "${inp}" ; then
  msg "Input not found: ${inp}"
  exit 1
fi

if test -z "${trans}" ; then
  help/vsts
fi


for i in ${trans} ; do
  if ! test -r "${i}" ; then
    msg "Not found: ${i}"
    exit 1
  fi
  pre="${gbn}.${i%%.*}"
  out="${pre}.POSCAR"
  vsts/trans "${i}" "${inp}" "${out}"
  if test $? -gt 0 ; then
    exit 1
  fi
  inp="${out}"
done
