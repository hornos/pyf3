#!/bin/bash
source $(dirname ${BASH_SOURCE})/../../shf3/lib/header
import gui

function help/vschg() {
  cat << EOF
  Usage: vschg options
               -s "shift (cartesian x,y,z)"
               -l LOCPOT
               -c CHGCAR
               -o origo no
EOF
  exit 1
}

### check
lev00="lev00"
if ! installed ${lev00} ; then
  echo "Not found: ${lev00}"
  exit 1
fi

### args
_s=""
_i=""
_o=""
_t="C"
while getopts hs:l:c:o: o; do
  case "$o" in
    s) _s=$OPTARG;;
    l) _i=$OPTARG;_t="L";;
    c) _i=$OPTARG;_t="C";;
    o) _o=$OPTARG;;
    h) help/vschg;;
  esac
done

### prefix
if empty "${_i}" ; then
  exit 1
fi

_i=$(basename "${_i}")
if ! readable "${_i}" ; then
  echo "Not found: ${_i}"
  exit 1
fi

# prefix
_p="${_i%%.*}"
# basename
_bn="${_i##*.}"

### inputs
chgcar="${_i}"
outcar="${_p}.OUTCAR"
contcar="${_p}.CONTCAR"

if readable "${chgcar}" ; then
  cp -iv "${chgcar}" "${_bn}"
fi

echo "Density : ${chgcar}"
echo "OUTCAR  : ${outcar}"
echo "CONTCAR : ${contcar}"

### main
vsgeom="vsgeom"

# get origo
if ! empty "${_o}" ; then
  _s=$(${vsgeom} -i "${contcar}" -s ${_o} | \
  awk '/Cart/{print $3 "," $4 "," $5}')
fi

log="${gbn}.log"
cmd="${gbn}.cmd"

echo "V"              >  "${cmd}"
echo "${outcar}"      >> "${cmd}"
echo "${contcar}"     >> "${cmd}"
echo "D"              >> "${cmd}"
echo "${_t}"          >> "${cmd}"
if ! test -z "${_s}" ; then
  echo "SHIFT   : ${_s}"
  echo "Sf"           >> "${cmd}"
  echo "${_s}"        >> "${cmd}"
fi
echo "wD"             >> "${cmd}"
echo "Q"              >> "${cmd}"
echo "Q"              >> "${cmd}"

echo "Running ${lev00}..."
${lev00} < "${cmd}" &> "${log}"

if readable CHGCAR.new ; then
  mv CHGCAR.new ${gbn}.${_bn}
fi
