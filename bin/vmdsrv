#!/bin/bash
source $(dirname ${BASH_SOURCE})/../../shf3/lib/header
import gui
import sys/srv

vmdsrv_timeout=2

function help/vmdsrv() {
  cat << EOF
VMD Server

Usage: ${gbn} options
EOF
exit 1
}

function vmdsrv/stop() {
  gui/header $(ns/func "${FUNCNAME}")
  sys/srv/cmd "exit"
  sleep ${vmdsrv_timeout}
  sys/srv/stop true
}

### args
action="${1:-start}"

### main
case "${action}" in
  start)
    shift
    if ! test -z "${*}" ; then
      _p="$*"
    else
      _p="vmd -nt -pos 500 0"
      _rc="${gbn}rc"
      if test -r "${_rc}" ; then
        _p="${_p} -startup ${_rc}"
      else
        _p="${_p} -startup ${gdn}/${_rc}"
      fi
    fi
    sys/srv/${action} ${_p};;
  stop)
    vmdsrv/stop;;
  cmd)
    shift
    sys/srv/cmd $*;;
  *)
    msg "Invalid action";
    exit 1;;
esac
